@page
@model DeletePatientModel
@{
    ViewData["Title"] = "Supprimer Patient";
}

<h1>Supprimer Patient</h1>

<div class="alert alert-danger">
    <h3>Êtes-vous sûr de vouloir supprimer ce patient ?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Nom
            </dt>
            <dd class="col-sm-10">
                @Model.Patient.FirstName @Model.Patient.LastName
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Patient.Email
            </dd>
        </dl>
        
        <form method="post">
            <button type="submit" class="btn btn-danger">Oui, supprimer</button>
            <a asp-page="./Patients" class="btn btn-secondary">Non, annuler</a>
        </form>
    </div>
</div>
