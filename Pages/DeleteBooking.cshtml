@page
@model DeleteBookingModel
@{
    ViewData["Title"] = "Supprimer Rendez-vous";
}

<h1>Supprimer Rendez-vous</h1>

<div class="alert alert-danger">
    <h3>Êtes-vous sûr de vouloir supprimer ce rendez-vous ?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.Booking.Name
            </dd>
            <dt class="col-sm-2">
                Date
            </dt>
            <dd class="col-sm-10">
                @Model.Booking.Date.ToString("dd/MM/yyyy") @Model.Booking.Start.ToString("HH:mm")
            </dd>
        </dl>
        
        <form method="post">
            <button type="submit" class="btn btn-danger">Oui, supprimer</button>
            <a asp-page="./Bookings" class="btn btn-secondary">Non, annuler</a>
        </form>
    </div>
</div>