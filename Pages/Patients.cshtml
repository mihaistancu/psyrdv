@page
@using psyrdv.Data
@model PatientsModel
@{
    ViewData["Title"] = "Patients";
}

<h1>Patients</h1>

<p>
    <a class="btn btn-primary" asp-page="AddPatient">Nouveau Patient</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Pr√©nom</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Patient patient in Model.Patients)
        {
            <tr>
                <td>@patient.FirstName</td>
                <td>@patient.LastName</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-page="/EditPatient" asp-route-id="@patient.Id">Modifier</a>
                    <a class="btn btn-danger btn-sm" asp-page="/DeletePatient" asp-route-id="@patient.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
